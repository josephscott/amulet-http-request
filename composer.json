{
	"name": "amulet/http-request",
	"description": "A PHP class for making HTTP requests",
	"license": "MIT",
	"require": {
		"php": ">=8.1.0",
		"ext-curl": "*"
	},
	"require-dev": {
		"ext-json": "*",
		"phpstan/phpstan": "^1.10",
		"pestphp/pest": "^2.24",
		"friendsofphp/php-cs-fixer": "^3.37"
	},
	"autoload": {
		"classmap": [
			"src/http-request.php"
		]
	},
	"config": {
		"classmap-authoritative": true,
		"allow-plugins": {
			"pestphp/pest-plugin": false
		}
	}
}
